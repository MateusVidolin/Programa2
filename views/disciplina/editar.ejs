<%- include('../partials/head.ejs') %>
<%- include('../partials/menu.ejs') %>

<br>
<div class="container">
    <div class="card">
        <div class="card-header">
            Editar Disciplina
        </div>
        <div class="card-body">
            <form method="post" action="/disciplinas/salvar">
                <input type="hidden" name="id" value="<%= disciplina.id %>">
                <div class="form-floating mb-3">
                    <input 
                        type="text" 
                        name="nomeDisciplina" 
                        id="nomeDisciplina" 
                        class="form-control" 
                        placeholder="Nome da disciplina" 
                        value="<%= disciplina.nomeDisciplina %>"
                        required>
                    <label for="nome">Nome da disciplina</label>
                </div>
                <div class="form-floating mb-3">
                    <input 
                        type="text" 
                        name="codigoDisciplina" 
                        id="codigoDisciplina" 
                        class="form-control" 
                        placeholder="Codigo da disciplina" 
                        value="<%= disciplina.codigoDisciplina %>"
                        required>
                    <label for="codigoDisciplina">Código da disciplina</label>
                </div>
                <div class="form-floating mb-3">
                    <select class="form-control" name="cursoId" id="cursoId">
                        <% cursos.forEach(curso => { %>
                        <% if(disciplina.cursoId == curso.id) {%>
                        <option value = "<%= curso.id%>"> Nome do curso: <%= curso.nomeCurso%> Código: <%= curso.codigoCurso%></option>
                        <% } %>
                        <%})%>
                        <% cursos.forEach(curso => { %>
                            <option value="<%= curso.id %>">Nome do curso: <%= curso.nomeCurso %> Código: <%= curso.codigoCurso %></option>
                        <%})%>
                        required>
                    </select>
                </div>
                <label for="semestre">Semestre da Disciplina</label>
                <div class="form-floating mb-3">
                    <select name = "semestre"> 
                        <option value = "<%= disciplina.semestre %>"> <%= disciplina.semestre %></option>
                        <option value = "primeiro"> Primeiro</option>
                        <option value = "segundo"> Segundo</option>
                        <option value = "segundo"> Segundo</option>
                        <option value = "terceiro"> Terceiro</option>
                        <option value = "quarto"> Quarto</option>
                        <option value = "quinto"> Quinto</option>
                        <option value = "sexto"> Sexto</option>
                        required>
                </select>
                </div>
                    <label for="periodo">Período da disciplina</label>
                    <div class="form-floating mb-3">
                        <select name = "periodo"> 
                            <option value = "<%= disciplina.periodo %>"> <%= disciplina.periodo %></option>
                            <option value = "Manhã"> Manhã</option>
                            <option value = "Tarde"> Tarde</option>
                            <option value = "Noite"> Noite</option>
                        required>
                    </select> 
                    </div>
                </div>
                <div class="form-floating mb-3">
                    <button type="submit" class="btn btn-primary">Alterar</button>
                    <a href="/disciplinas" class="btn btn-warning">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>