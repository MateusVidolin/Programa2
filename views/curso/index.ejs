<%- include('../partials/head.ejs') %>
<%- include('../partials/menu.ejs') %>

<br>
<div class="container">
    <a href="/cursos/novo" class="btn btn-primary">Novo Curso</a>
    <br>
    <div class="card">
        <div class="card-header">
            Cursos Cadastrados
        </div>
        <div class="card-body">
            <% if(msgOK == '1') {%>
                <div class="alert alert-success">
                    <strong>:D Operação realizada com sucesso! </strong>
                </div>
             <% } %>
            <% if(msgNOK == '0') {%>
                <div class="alert alert-danger">
                    <strong>:( Dados já existentes!</strong>             
                </div>
            <% } %>
            <table class="table table-bordered">
                <thead>
                    <th class="col-5">Nome do Curso</th>
                    <th class="col-3">Código do Curso</th>
                    <th class="col-2">Período</th>
                    <th class="col-2">Ações</th>
                </thead>
                <tbody>
                    <% cursos.forEach(curso => { %>
                        <tr>
                            <td><%= curso.nomeCurso %></td>
                            <td><%= curso.codigoCurso %></td>
                            <td><%= curso.periodo %></td>
                            <td>
                                <a href="/cursos/<%= curso.id %>" class="btn btn-primary">Editar</a>
                                <a href="/cursos/delete/<%= curso.id %>" class="btn btn-danger">Excluir</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>