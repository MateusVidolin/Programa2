<%- include('./partials/head.ejs') %>


<div class="container">

    <div 
        class="card position-absolute top-50 start-50 translate-middle"
        style="width: 18rem;"
    >   
        <div class="card-header bg-light text-black font-family-sans-serif">
            SGRP
            <img  class="img-fluid float-end" src="https://bkpsitecpsnew.blob.core.windows.net/uploadsitecps/sites/36/2023/01/fatec_mogi_mirim_2023.png" width="100" height="30"/>
        </div>
        <div class="card-body">
            <form method="post" action="/usuarios/login">
                <div class="form-floating mb-3">
                    <input
                        type="text"
                        name="email"
                        class="form-control"
                        id="email"
                        placeholder="Digite o seu e-mail"
                    >
                    <label for="email">Digite o seu e-mail</label>
                </div>
                <div class="form-floating mb-3">
                    <input
                        type="password"
                        name="senha"
                        class="form-control"
                        id="senha"
                        placeholder="Digite a sua senha"
                    >
                    <label for="email">Digite a sua senha</label>
                </div>
                <br>
                <% if(msg != '') {%>
                    <div class="alert alert-danger">
                        <%= msg %>
                    </div>
                <% } %>
                <div class="d-grid gap-2 col-6 mx-auto">
                    <button type="submit" class="btn btn-secondary">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('./partials/footer.ejs') %>